<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="2"
    android:orientation="horizontal"
    tools:context=".MainActivity2">

    <ImageButton
        android:onClick="sendanakin"
        android:id="@+id/anakin"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img2"
        />

    <ImageButton
        android:onClick="sendobiwan"
        android:id="@+id/obiwan"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:src="@drawable/img3"/>

    <ImageButton
        android:onClick="sendluke"
        android:id="@+id/luke"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:src="@drawable/img4"/>

    <ImageButton
        android:onClick="sendashoka"
        android:id="@+id/ashoka"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:src="@drawable/img5"/>

    <Button
        android:background="@color/black"
        android:textColor="#FFFF"
        android:id="@+id/btndarkside"
        android:text="DarkSide"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:background="@color/blue"
        android:textColor="#FFFF"
        android:id="@+id/btnlightside"
        android:text="LightSide"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="menus"/>

</GridLayout>