<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoextra"
    tools:context=".MainActivity6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="Sobre Mi"
        android:textColor="#FFFF"/>

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/starwars"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="25dp"
        android:text="Fabian de Jesus Navarro Garcia \n21310373 \n5Â°N \nDesarrollo para Dispositivos Moviles I"
        android:textColor="#FFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:text="Seleccione su personaje favorito"
        android:textColor="#FFC900"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkBoxDarthVader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:buttonTint="#FF2A31"
            android:text="Darth Vader"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxDarthMaul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:buttonTint="#FF2A31"
            android:text="Darth Maul"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkBoxYoda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:buttonTint="#0B7FFB"
                android:text="Yoda"
                android:textColor="#FFFF"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/checkBoxObiWan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:buttonTint="#0B7FFB"
                android:text="Obi-Wan"
                android:textColor="#FFFF"
                android:textSize="20dp" />
        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkBoxAnakin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:buttonTint="#0B7FFB"
            android:text="Anakin Skywalker"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxAhsoka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:buttonTint="#0B7FFB"
            android:text="Ahsoka"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </TableRow>

    <Button
        android:id="@+id/activity_main_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:text="I'm Your Father"
        android:background="@drawable/fondoextra"
        android:textColor="#FFFF"
        />
</LinearLayout>