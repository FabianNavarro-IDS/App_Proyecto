<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/fondosith"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siths"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="15dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal">

        <ImageView
            android:onClick="sendanakin"
            android:id="@+id/anakin"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/img6"
            />

        <ImageView
            android:onClick="sendobiwan"
            android:id="@+id/obiwan"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:src="@drawable/img7"/>

        <ImageView
            android:onClick="sendluke"
            android:id="@+id/luke"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:src="@drawable/img8"/>

        <ImageView
            android:onClick="sendashoka"
            android:id="@+id/ashoka"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:src="@drawable/img9"/>
    </GridLayout>

    <ToggleButton
        android:id="@+id/TGButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Oscuro"
        android:textOff="Luz"/>

</LinearLayout>